{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "sourceMap": true,
        "module": "es2015",
        "lib": [ "dom", "es2015", "scripthost" ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "importHelpers": true
    },
    "include": [
        "./src/**/*"
    ]
}